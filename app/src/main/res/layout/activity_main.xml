<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       //membuat fragment untuk menampilkan kepala yang di ambil dari drawbale

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:id="@+id/heads_container"
           >

       </FrameLayout>

       //membuat fragment untuk menampilkan body yang di ambil dari drawbale

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:id="@+id/body_container">

       </FrameLayout>

       //membuat fragment untuk menampilkan kaki yang di ambil dari drawbale
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:id="@+id/legs_container">

       </FrameLayout>


   </LinearLayout>

</ScrollView>
